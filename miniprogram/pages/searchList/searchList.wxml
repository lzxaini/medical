<view class="searchList" wx:if="{{searchResult}}">
  <view class="item" wx:for="{{searchResult}}" wx:for-item="item" data-src="{{item}}" bindtap="goDetail">
    <view class="image">
    <image style="width: 100%;height: 100%;" src="{{item.illustration}}" mode="" wx:if="{{item.illustration}}"/>
    <image wx:else style="width: 80rpx;height: 80rpx;" src="../../assets/images/bg.png" mode=""/>
    </view>
    <view class="title">
      <view class="titleContent">
      {{item.title}}

    </view>
    <view class="go">
      <van-tag  type="primary">详情></van-tag>
    </view>
      <view class="creator">
      {{item.creator}}
    </view>
    </view>

  </view>
</view>
<van-empty   description="搜索为空" wx:else/>
